<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.AddPostList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/blg_tool_addpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/back_button"/>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageButton
            android:id="@+id/blg_add_image_button"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="14dp"
            android:layout_marginTop="60dp"
            android:scaleType="center"
            android:src="@android:drawable/ic_input_add"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/blg_add_post_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/blg_add_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/blg_post_title"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/blg_desc_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blg_desc_tag_text"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"/>
        <EditText
            android:id="@+id/blg_post_desc"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/blg_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/upload"
            android:layout_gravity="center|bottom"/>

    </LinearLayout>



</ScrollView>